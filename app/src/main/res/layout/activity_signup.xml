<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <ImageButton
        android:id="@+id/appbar_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/appber_arrow"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="23dp"/>

    <TextView
        android:id="@+id/signup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appbar_back"
        android:layout_marginTop="36dp"
        android:text="가입"
        android:textColor="#175389"
        android:textSize="32dp"/>

    <TextView
        android:id="@+id/signup_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_title"
        android:layout_marginTop="10dp"
        android:text="가입정보를 입력해주세요"
        android:textSize="15dp"
        android:textColor="#175389"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/partner_code_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_desc"
        android:layout_marginTop="60dp"
        android:layout_marginStart="27dp"
        android:text="파트너 코드"
        android:textSize="14dp"
        android:textColor="#222222"/>

    <EditText
        android:id="@+id/edit_partnercode"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@+id/partner_code_title"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="27dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_ffffff_efefef"
        android:textSize="15dp"
        android:text="RP47638872"
        android:textColor="#222222"
        android:hint="코드를 입력해주세요."
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:lines="1"
        android:inputType="text"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/userid_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_partnercode"
        android:layout_marginTop="24dp"
        android:layout_marginStart="27dp"
        android:text="회원ID"
        android:textSize="14dp"
        android:textColor="#222222"/>

    <EditText
        android:id="@+id/edit_userid"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@+id/userid_title"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="27dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_ffffff_efefef"
        android:textSize="15dp"
        android:textColor="#222222"
        android:hint="고객 ID를 입력하세요."
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:lines="1"
        android:inputType="text"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/tv_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/edit_userid"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="27dp"
        android:layout_marginTop="6dp"
        android:textSize="13dp"
        android:textColor="#ed1e1e"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="27dp"
        android:background="@drawable/ripple_btn_5dc1ff"
        android:enabled="false"
        android:textColor="#ffffff"
        android:text="확인"
        android:textSize="17dp"
        android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>