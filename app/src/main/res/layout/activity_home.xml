<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/ib_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="15dp"
        android:background="@android:color/transparent"
        android:src="@drawable/set_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/passipad_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:src="@drawable/passipad_m_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ib_signup" />

    <TextView
        android:id="@+id/passipad_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="간편인증으로 쉽고 빠르게"
        android:textColor="#175389"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passipad_logo" />

    <ImageButton
        android:id="@+id/ib_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:background="@android:color/transparent"
        android:src="@drawable/citation_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_divider"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/button_divider"
        android:layout_width="1dp"
        android:layout_height="15dp"
        android:background="#3f96ed"
        app:layout_constraintBottom_toBottomOf="@+id/ib_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/ib_change_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:background="@android:color/transparent"
        android:src="@drawable/lock_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_divider"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="로그인"
        android:textColor="#175389"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="@id/ib_login"
        app:layout_constraintStart_toStartOf="@+id/ib_login"
        app:layout_constraintTop_toBottomOf="@id/button_divider" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="비밀번호 변경"
        android:textColor="#175389"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="@id/ib_change_pw"
        app:layout_constraintStart_toStartOf="@+id/ib_change_pw"
        app:layout_constraintTop_toBottomOf="@id/button_divider" />

    <ImageView
        android:id="@+id/bio_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bio_icon"
        app:layout_constraintEnd_toStartOf="@+id/button_divider"
        app:layout_constraintTop_toBottomOf="@+id/tv_login"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="13dp"/>

    <TextView
        android:id="@+id/tv_bio_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="생체인증 설정"
        android:textColor="#175389"
        app:layout_constraintTop_toTopOf="@+id/bio_icon"
        app:layout_constraintStart_toEndOf="@+id/button_divider"
        android:layout_marginStart="5dp"/>

    <LinearLayout
        android:id="@+id/ll_use_bio"
        app:layout_constraintStart_toStartOf="@+id/tv_bio_title"
        app:layout_constraintTop_toBottomOf="@id/tv_bio_title"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:background="@drawable/line_cbcbcb">

        <Switch
            android:id="@+id/sw_bio"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:track="@android:color/transparent"
            android:thumb="@drawable/switch_thumb_selector"
            android:clickable="false"/>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45dp"
        android:src="@drawable/rowem_s_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>